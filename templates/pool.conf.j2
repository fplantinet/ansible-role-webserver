; {{ ansible_managed }}
[{{ item.0.user }}-{{ item.1.identifier }}]
listen = /var/run/{{monsieurbiz_webserver_php_name}}-fpm__{{ item.0.user }}-{{ item.1.identifier }}.sock
listen.owner = nginx
listen.group = nginx
listen.mode = 0660
user = {{ item.0.user }}
group = nginx
pm = dynamic
pm.max_children = 10
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 3
pm.max_requests = 500
chdir = {{ item.1.root_dir }}
php_admin_value[open_basedir] = {{ item.1.root_dir }}:{% if item.1.open_basedir %}{{ item.1.open_basedir }}:{% endif %}/tmp
